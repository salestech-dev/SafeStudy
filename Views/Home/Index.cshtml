@{
    ViewData["Title"] = "SafeStudy - Organize seu estudo";
}

<div class="home-hero">
    <h1>SafeStudy</h1>
    <p>Organize seu tempo, maximize seu aprendizado 📚</p>
    <a href="/Usuario/Login" class="btn btn-primary">Começar Agora</a>
</div>

<div class="features-section">
    <a asp-action="Pomodoro" asp-controller="Estudo" class="feature-card">
        <h3>⏳ Pomodoro</h3>
        <p>Foque por 25 minutos e aumente sua produtividade.</p>
    </a>
    <a asp-action="Dashboard" asp-controller="Estudo" class="feature-card">
        <h3>📊 Dashboard</h3>
        <p>Veja seu progresso e resultados de forma clara.</p>
    </a>
    <a asp-action="Ranking" asp-controller="Usuario" class="feature-card">
        <h3>🏆 Ranking</h3>
        <p>Compita com outros estudantes e alcance o topo.</p>
    </a>
    <a asp-action="Relatorio" asp-controller="Estudo" class="feature-card">
        <h3>📈 Relatórios</h3>
        <p>Analise sua evolução e descubra seus pontos fortes.</p>
    </a>
</div>
